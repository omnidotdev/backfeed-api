{
  "name": "backfeed-graphql-api",
  "private": true,
  "main": "build/server.js",
  "prisma": {
    "seed": "tsnd src/lib/prisma/seed.ts"
  },
  "scripts": {
    "dev": "GRAPHILE_ENV=development NODE_ENV=development bun run --hot src/server.ts",
    "build": "bun db:generate && tsc",
    "start": "NODE_ENV=production dotenv -e .env -c -- bun db:migrate:prod && NODE_PATH=build/ node build/server.js",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "db:seed": "dotenv -e .env -c -- prisma db seed",
    "db:generate": "prisma generate --schema src/lib/prisma/schema.prisma",
    "db:migrate:dev": "dotenv -e .env -c -- prisma migrate dev --schema src/lib/prisma/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema src/lib/prisma/schema.prisma",
    "db:studio": "dotenv -e .env -c -- prisma studio --schema src/lib/prisma/schema.prisma",
    "db:reset": "dotenv -e .env -c -- prisma migrate reset --schema src/lib/prisma/schema.prisma",
    "graphile:generate": "NODE_ENV=development bun run --env-file .env.local src/scripts/generate-schema.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.11",
    "@types/node": "^20.2.5",
    "dotenv-cli": "^7.2.1",
    "husky": "^9.1.6",
    "prisma": "^4.15.0",
    "replace-in-file": "^8.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "graphile-export": "^0.0.2-beta.20",
    "graphql": "^16.6.0",
    "graphql-yoga": "^5.7.0",
    "hono": "^4.6.5",
    "pg": "^8.13.0",
    "postgraphile": "^5.0.0-beta.32",
    "postgraphile-plugin-connection-filter": "^3.0.0-beta.5"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
