{
  "name": "backfeed-graphql-api",
  "private": true,
  "main": "build/server.js",
  "scripts": {
    "dev": "GRAPHILE_ENV=development NODE_ENV=development bun run --hot src/server.ts",
    "build": "bun build --target node --outdir build src/server.ts",
    "start": "GRAPHILE_ENV=production NODE_ENV=production bun db:migrate && GRAPHILE_ENV=production NODE_ENV=production bun run build/server.js",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "db:setup": "bun src/scripts/db/setupDatabase.ts",
    "db:check": "bun --env-file .env.local drizzle-kit check",
    "db:generate": "bun --env-file .env.local drizzle-kit generate",
    "db:migrate": "bun --env-file .env.local drizzle-kit migrate && bun graphile:generate",
    "db:migrate:drop": "bun --env-file .env.local drizzle-kit drop",
    "db:pull": "bun --env-file .env.local drizzle-kit introspect",
    "db:push": "bun --env-file .env.local drizzle-kit push",
    "db:seed": "NODE_ENV=development bun run --env-file .env.local src/scripts/db/seedDatabase.ts",
    "db:studio": "bun --env-file .env.local drizzle-kit studio",
    "db:up": "bun --env-file .env.local drizzle-kit up",
    "graphile:generate": "NODE_ENV=development bun run --env-file .env.local src/scripts/generateGraphqlSchema.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.6.0",
    "@types/bun": "^1.2.8",
    "@types/node": "^22.13.14",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.31.0",
    "husky": "^9.1.7",
    "replace-in-file": "^8.3.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@envelop/generic-auth": "^9.1.3",
    "@envelop/parser-cache": "^8.1.3",
    "@envelop/validation-cache": "^9.0.0",
    "@escape.tech/graphql-armor": "^3.1.2",
    "@graphile/pg-aggregates": "0.2.0-beta.8",
    "@graphile/simplify-inflection": "8.0.0-beta.6",
    "@polar-sh/hono": "^0.3.0",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.42.0",
    "drizzle-seed": "^0.3.1",
    "graphile-export": "0.0.2-beta.26",
    "graphql": "^16.10.0",
    "graphql-yoga": "^5.13.2",
    "hono": "^4.7.7",
    "jose": "^6.0.10",
    "pg": "^8.14.1",
    "postgraphile": "5.0.0-beta.40",
    "postgraphile-plugin-connection-filter": "3.0.0-beta.8",
    "zod": "^3.24.3"
  },
  "trustedDependencies": ["@biomejs/biome", "esbuild"]
}
