{
  "name": "backfeed-graphql-api",
  "private": true,
  "main": "build/server.js",
  "scripts": {
    "dev": "GRAPHILE_ENV=development NODE_ENV=development bun run --hot src/server.ts",
    "build": "bun build --target bun --outdir build src/server.ts",
    "start": "NODE_ENV=production bun run build/server.js",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "db:check": "bun --env-file .env.local drizzle-kit check",
    "db:generate": "bun --env-file .env.local drizzle-kit generate",
    "db:migrate": "bun --env-file .env.local drizzle-kit migrate",
    "db:migrate:drop": "bun --env-file .env.local drizzle-kit drop",
    "db:pull": "bun --env-file .env.local drizzle-kit introspect",
    "db:push": "bun --env-file .env.local drizzle-kit push",
    "db:seed": "NODE_ENV=development bun run --env-file .env.local src/scripts/seedDatabase.ts",
    "db:studio": "bun --env-file .env.local drizzle-kit studio",
    "db:up": "bun --env-file .env.local drizzle-kit up",
    "graphile:generate": "NODE_ENV=development bun run --env-file .env.local src/scripts/generateGraphqlSchema.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.1.0",
    "@types/bun": "^1.1.12",
    "@types/node": "^22.8.6",
    "@types/pg": "^8.11.10",
    "dotenv-cli": "^7.4.2",
    "drizzle-kit": "^0.27.0",
    "husky": "^9.1.6",
    "replace-in-file": "^8.2.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@graphile/pg-aggregates": "^0.2.0-beta.7",
    "@graphile/simplify-inflection": "^8.0.0-beta.5",
    "drizzle-orm": "^0.36.0",
    "graphile-export": "^0.0.2-beta.20",
    "graphql": "^16.9.0",
    "graphql-yoga": "^5.8.0",
    "hono": "^4.6.8",
    "pg": "^8.13.1",
    "postgraphile": "^5.0.0-beta.32",
    "postgraphile-plugin-connection-filter": "^3.0.0-beta.5"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "esbuild"
  ]
}
